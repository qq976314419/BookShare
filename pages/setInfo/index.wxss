/* pages/register/index.wxss */
view {
  font-size: 34rpx;
  color: #5d5d5d;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
view .input-group {
  font-size: 18px;
  width: 85vw;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  border-bottom: 1px solid #eee;
}
view .input-group .title {
  padding: 0 40rpx 0 0;
  width: auto;
}
view .input-group input {
  flex: 1 0 auto;
  height: 40px;
}
view button {
  margin-top: 10px;
}
