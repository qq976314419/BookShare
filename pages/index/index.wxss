view {
  display: flex;
  flex-direction: column;
}
view .header-messages {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColorLight);
  color: #fff;
  height: 30px;
}
view .swiper-container {
  flex: 1;
  height: calc(100vh - 30px);
  width: 750rpx;
}
view .swiper-container swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
view .swiper-container swiper-item .item-card {
  height: 85vh;
  margin: 0 75rpx;
  padding: 20rpx;
  box-shadow: 0px 0px 20rpx #cdcdcd;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
view .swiper-container swiper-item .item-card navigator {
  flex: 1 1 auto;
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
view .swiper-container swiper-item .item-card navigator .image {
  display: flex;
  flex: 0 1 auto;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
view .swiper-container swiper-item .item-card navigator .image image {
  width: 500rpx;
  height: 500rpx;
}
view .swiper-container swiper-item .item-card navigator .title {
  flex: 0 1 auto;
  display: flex;
  width: 100%;
  margin: 10rpx 0 10rpx;
  font-size: 50rpx;
  font-weight: 500;
  justify-content: center;
  align-items: center;
  color: var(--themeColor);
}
view .swiper-container swiper-item .item-card navigator .content-info {
  width: 100%;
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
view .swiper-container swiper-item .item-card navigator .content-info .category,
view .swiper-container swiper-item .item-card navigator .content-info .summary {
  font-size: 30rpx;
  width: 100%;
  margin: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}
view .swiper-container swiper-item .item-card navigator .content-info .category {
  flex-shrink: 0;
}
