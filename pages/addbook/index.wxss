/* pages/addbook/index.wxss */
.addbook {
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.addbook .input-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.addbook .input-group input,
.addbook .input-group textarea {
  width: 70vw;
  border: 1px solid #eee;
  margin: 10rpx;
  height: 40px;
  border-radius: 10rpx;
  flex: 0 1 auto;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.addbook .input-group .category {
  flex: 1 1 auto;
  color: var(--themeColor);
  width: 70vw;
  margin: 5rpx;
  height: 40px;
  padding: 0 10rpx;
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}
.addbook .input-group textarea {
  height: 100px;
}
.addbook .input-group .title {
  color: #5d5d5d;
}
.addbook .addimage {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #eee;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.addbook .addimage .add {
  width: 90rpx;
  height: 90rpx;
}
.addbook .input-group-check {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.addbook .input-group-check .title {
  color: #5d5d5d;
}
.addbook button {
  margin: 15rpx 0;
}
.addbook .image-preview {
  position: relative;
  margin-top: 20px;
  width: 200rpx;
  height: 300rpx;
}
.addbook .image-preview .preview {
  width: 200rpx;
  height: 300rpx;
}
.addbook .image-preview .delete {
  position: absolute;
  width: 20px;
  height: 20px;
  right: -5px;
  top: -5px;
}
